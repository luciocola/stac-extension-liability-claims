{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://stac-extensions.github.io/liability-claims/iso19115-quality.json#",
  "title": "ISO 19115 Data Quality (simplified)",
  "description": "Standalone simplified JSON Schema for ISO 19115-like data quality reports",
  "oneOf": [
    {"$ref": "#/definitions/iso19115_quality_report"},
    {
      "type": "array",
      "items": {"$ref": "#/definitions/iso19115_quality_report"}
    }
  ],
  "definitions": {
    "iso19115_dq_conformance_result": {
      "type": "object",
      "properties": {
        "specification": { "type": "string" },
        "explanation": { "type": "string" },
        "pass": { "type": "boolean" }
      },
      "required": ["specification", "pass"],
      "additionalProperties": true
    },
    "iso19115_dq_measure": {
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "value": { "type": ["number", "string", "boolean", "object", "null"] },
        "valueType": { "type": "string" },
        "units": { "type": "string" },
        "method": { "type": "string" },
        "reference": { "type": "string", "format": "uri" }
      },
      "additionalProperties": true
    },
    "iso19115_dq_completeness": {
      "type": "object",
      "properties": {
        "type": { "const": "completeness" },
        "scope": { "type": "string" },
        "measure": { "$ref": "#/definitions/iso19115_dq_measure" },
        "conformance": { "$ref": "#/definitions/iso19115_dq_conformance_result" }
      },
      "required": ["type", "measure"],
      "additionalProperties": true
    },
    "iso19115_dq_logical_consistency": {
      "type": "object",
      "properties": {
        "type": { "const": "logicalConsistency" },
        "description": { "type": "string" },
        "testsPerformed": { "type": "array", "items": { "type": "string" } },
        "measure": { "$ref": "#/definitions/iso19115_dq_measure" }
      },
      "required": ["type"],
      "additionalProperties": true
    },
    "iso19115_dq_positional_accuracy": {
      "type": "object",
      "properties": {
        "type": { "const": "positionalAccuracy" },
        "accuracyValue": { "type": "number" },
        "units": { "type": "string" },
        "method": { "type": "string" },
        "measure": { "$ref": "#/definitions/iso19115_dq_measure" }
      },
      "required": ["type"],
      "additionalProperties": true
    },
    "iso19115_dq_thematic_accuracy": {
      "type": "object",
      "properties": {
        "type": { "const": "thematicAccuracy" },
        "description": { "type": "string" },
        "measure": { "$ref": "#/definitions/iso19115_dq_measure" }
      },
      "required": ["type", "measure"],
      "additionalProperties": true
    },
    "iso19115_dq_temporal_accuracy": {
      "type": "object",
      "properties": {
        "type": { "const": "temporalAccuracy" },
        "description": { "type": "string" },
        "measure": { "$ref": "#/definitions/iso19115_dq_measure" }
      },
      "required": ["type", "measure"],
      "additionalProperties": true
    },
    "iso19115_dq_attribute_accuracy": {
      "type": "object",
      "properties": {
        "type": { "const": "attributeAccuracy" },
        "attribute": { "type": "string" },
        "measure": { "$ref": "#/definitions/iso19115_dq_measure" }
      },
      "required": ["type", "attribute", "measure"],
      "additionalProperties": true
    },
    "iso19115_dq_topological_consistency": {
      "type": "object",
      "properties": {
        "type": { "const": "topologicalConsistency" },
        "description": { "type": "string" },
        "tests": { "type": "array", "items": { "type": "string" } },
        "measure": { "$ref": "#/definitions/iso19115_dq_measure" }
      },
      "required": ["type"],
      "additionalProperties": true
    },
    "iso19115_dq_lineage": {
      "type": "object",
      "properties": {
        "type": { "const": "lineage" },
        "statement": { "type": "string" },
        "sources": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["type"],
      "additionalProperties": true
    },
    "iso19115_dq_element": {
      "type": "object",
      "properties": {
        "elementType": {
          "type": "string",
          "enum": ["completeness","logicalConsistency","positionalAccuracy","thematicAccuracy","temporalAccuracy","attributeAccuracy","topologicalConsistency","lineage","other"]
        },
        "summary": { "type": "string" },
        "detail": {
          "oneOf": [
            { "$ref": "#/definitions/iso19115_dq_completeness" },
            { "$ref": "#/definitions/iso19115_dq_logical_consistency" },
            { "$ref": "#/definitions/iso19115_dq_positional_accuracy" },
            { "$ref": "#/definitions/iso19115_dq_thematic_accuracy" },
            { "$ref": "#/definitions/iso19115_dq_temporal_accuracy" },
            { "$ref": "#/definitions/iso19115_dq_attribute_accuracy" },
            { "$ref": "#/definitions/iso19115_dq_topological_consistency" },
            { "$ref": "#/definitions/iso19115_dq_lineage" },
            { "$ref": "#/definitions/iso19115_dq_measure" }
          ]
        },
        "conformance": { "$ref": "#/definitions/iso19115_dq_conformance_result" }
      },
      "required": ["elementType"],
      "additionalProperties": true
    },
    "iso19115_quality_report": {
      "type": "object",
      "properties": {
        "reportId": { "type": "string" },
        "scope": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "version": { "type": "string" },
        "elements": { "type": "array", "items": { "$ref": "#/definitions/iso19115_dq_element" } },
        "summary": { "type": "string" }
      },
      "additionalProperties": true
    }
  }
}
